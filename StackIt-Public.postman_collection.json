					"name": "Register",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "urlencoded",
							"urlencoded": [
								{
									"key": "email",
									"value": "user@example.com",
									"type": "text",
									"description": "User email address"
								},
								{
									"key": "password",
